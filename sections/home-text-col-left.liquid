<div class="page-text-col align-left scroll-trigger-element">
  <div class="col-text__wrapper">
    <h3>{{section.settings.home-left-col-header}}</h3>
    <p>{{section.settings.home-left-col-text}}</p>
    <a href="{{section.settings.home-left-col-url}}" class="cta-link">Learn More</a>
  </div>
</div>



{% schema %}
  {
    "name": "Home Text Left Column",
    "settings": [
      {
        "id": "home-left-col-header",
        "type": "text",
        "label": "Home Text Left Column Header"
      },
      {
        "id": "home-left-col-text",
        "type": "textarea",
        "label": "Home Text Left Column Text"
      },
      {
        "id": "home-left-col-url",
        "type": "url",
        "label": "Link"
      }
    ]
  }
{% endschema %}