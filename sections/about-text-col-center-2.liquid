{%if section.settings.about-center-col-image2 %}
  {% render 'responsive-image' with imgSrc: section.settings.about-center-col-image2, aspectVar: '_16x9' %}
{% endif %}
<div class="page-text-col align-center">
  <div class="col-text__wrapper">
    {%if section.settings.about-center-col-header2 %}
      <h3>{{section.settings.about-center-col-header2}}</h3>
    {% endif %}
    {%if section.settings.about-center-col-text2 %}
      <p>{{section.settings.about-center-col-text2}}</p>
    {% endif %}
  </div>
</div>
 



{% schema %}
  {
    "name": "About Text Center Column",
    "settings": [
      {
        "id": "about-center-col-header2",
        "type": "text",
        "label": "About Text center Column Header"
      },
      {
        "id": "about-center-col-text2",
        "type": "textarea",
        "label": "About Text center Column Text"
      },
      {
        "id": "about-center-col-image2",
        "type": "image_picker",
        "label": "About Text Center Image"
      }
    ]
  }
{% endschema %}